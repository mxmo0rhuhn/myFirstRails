<!DOCTYPE html>
<html>
<head>
<!-- START_HIGHLIGHT -->
  <title>Pragprog Books Online Store</title>
<!-- END_HIGHLIGHT -->
  <%= stylesheet_link_tag    "application", media: "all" %><!-- <label id="code.slt"/> -->
  <%= javascript_include_tag "application" %><!-- <label id="code.jlt"/> -->
  <%= csrf_meta_tags %><!-- <label id="code.csrf"/> -->
</head>
<!-- END:head -->
<body class="<%= controller.controller_name %>">
<!-- START_HIGHLIGHT -->
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Webprogrammieren II - 2013" %><!-- <label id="code.depot.e.title"/> -->
  </div>
  <div id="columns">
    <div id="side">
<% if @cart %>
	<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
		<%= render @cart %>
	<% end %>
<% end %>


      <ul>
        <li><%= link_to "ET nach Hause telefonieren", store_path %></li>
        <li><a href="http://dublin.zhaw.ch/~schrimax/">Webprogrammieren 1</a></li>
        <li><a href="http://dublin.zhaw.ch/~schrimax/project/todoMain.html">Eine Todo Liste</a></li>
        <li><a href="http://dublin.zhaw.ch/~schrimax/project/todoContact.html">Contact</a></li>
      </ul>
    </div>
    <div id="main">
<!-- END_HIGHLIGHT -->
      <%= yield %><!-- <label id="code.depot.e.include"/> -->
<!-- START_HIGHLIGHT -->
    </div>
  </div>
<!-- END_HIGHLIGHT -->
</body>
</html>
